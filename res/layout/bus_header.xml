<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bus_track_header"
   	android:layout_width="fill_parent"
   	android:layout_height="wrap_content"
   	android:paddingLeft="2dip"
   	android:paddingRight="2dip"
   	android:gravity="center_vertical"
   	android:orientation="horizontal"
   	android:background="@drawable/head_bg">
   	
   	<TextView 
   		android:id="@+id/bus_track_head_title" 
		style="@style/detail_head_title"
		android:layout_gravity="center"
   		android:text="@string/frame_bus_track_header_title"/>
   	
   	<ProgressBar 
		android:id="@+id/bus_track_head_progress" 
		style="@style/loading_small"
		android:layout_gravity="right|center"
		android:layout_marginRight="5dip"/>
   	
   	<ImageView 
   		android:id="@+id/bus_track_refresh"
	   	android:layout_width="wrap_content" 
	   	android:layout_height="wrap_content" 
	   	android:layout_gravity="right|center"
	   	android:clickable="true" 
	   	android:background="@drawable/head_refresh"
		android:visibility="gone"/>
   	
</FrameLayout>
