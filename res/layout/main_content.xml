<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/width_param"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/widget_title_right"
            android:text="学校方向"
            android:textColor="#ffffffff"
            android:textSize="20sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/widget_content_bg"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/main_textView_test1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/presence_online"
                    android:gravity="center_vertical"
                    android:text="@string/frame_main_school_map"
                    android:textAppearance="?android:attr/textAppearance"
                    android:textColor="#ffffff" />

                <ImageView
                    android:id="@+id/map_imageBtn"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_map" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/widget_content_bg"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/presence_online"
                    android:gravity="center_vertical"
                    android:text="@string/frame_main_bus_track"
                    android:textAppearance="?android:attr/textAppearance"
                    android:textColor="#ffffff" />

                <ImageView
                    android:id="@+id/goout_imageBtn"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_bus" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/widget_content_bg"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/presence_online"
                    android:gravity="center_vertical"
                    android:text="@string/frame_main_common_phone"
                    android:textAppearance="?android:attr/textAppearance"
                    android:textColor="#ffffff" />

                <ImageView
                    android:id="@+id/phone_imageBtn"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_phone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/widget_content_bg"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/presence_online"
                    android:gravity="center_vertical"
                    android:text="@string/frame_main_news_and_noticle"
                    android:textAppearance="?android:attr/textAppearance"
                    android:textColor="#ffffff" />

                <ImageView
                    android:id="@+id/news_and_noticle_imageBtn"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_news" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/widget_content_bg"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/presence_online"
                android:gravity="center_vertical"
                android:text="@string/frame_main_school_landscape"
                android:textAppearance="?android:attr/textAppearance"
                android:textColor="#ffffff" />

            <ImageView
                android:id="@+id/campus_imageBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/first" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>